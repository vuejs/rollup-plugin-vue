{
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "Promise": true
  },
  "extends": "standard",
  "plugins": [ "html" ],
  "parser": "babel-eslint",
  "rules": {
    "indent": [ 2, 4 ],

    "no-multiple-empty-lines": [ 2, { "max": 1, "maxEOF": 0, "maxBOF": 0 } ],

    "no-use-before-define": [ 2, { "functions": false } ],

    "prefer-const": 1,

    "complexity": [ 1, 5 ]
  },
  "settings": {
    "html/indent": "0",
    "html/report-bad-indent": 2
  }
}
